<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00b4e6</item>
        <item name="colorPrimaryDark">#00b4e6</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor">#FFFF4130</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4876ff</item>
        <item name="colorPrimaryDark">#3a5fcd</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:searchViewStyle">@style/MySearchView</item>
    </style>

    <style name="MySearchView" parent="Widget.AppCompat.SearchView"/>

</resources>
