<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/activity_chapter12"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="none"
    tools:context="com.jimmysun.androidheroes.chapter12.Chapter12Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_palette"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Palette"/>

        <Button
            android:id="@+id/btn_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="阴影效果"/>

        <Button
            android:id="@+id/btn_tinting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="着色"/>

        <Button
            android:id="@+id/btn_clipping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="裁剪"/>

        <Button
            android:id="@+id/btn_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RecyclerView"/>

        <Button
            android:id="@+id/btn_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CardView"/>

        <Button
            android:id="@+id/btn_transition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity 过渡动画"/>

        <Button
            android:id="@+id/btn_ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ripple 效果"/>

        <Button
            android:id="@+id/btn_circular_reveal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Circular Reveal"/>

        <Button
            android:id="@+id/btn_state_list_animator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StateListAnimator"/>

        <Button
            android:id="@+id/btn_animated_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="animated-selector"/>

        <Button
            android:id="@+id/btn_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toolbar"/>

        <Button
            android:id="@+id/btn_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"/>
    </LinearLayout>
</ScrollView>
