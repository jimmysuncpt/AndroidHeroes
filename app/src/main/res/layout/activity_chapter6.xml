<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shape"/>

        <Button
            android:id="@+id/btn_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layer"/>

        <Button
            android:id="@+id/btn_clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时钟"/>

        <Button
            android:id="@+id/btn_layer_coverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layer图层"/>

        <Button
            android:id="@+id/btn_color_matrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="颜色矩阵"/>

        <Button
            android:id="@+id/btn_corner_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="圆角图片"/>

        <Button
            android:id="@+id/btn_scratch_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="刮刮卡"/>

        <Button
            android:id="@+id/btn_bitmap_shader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="位图Shader"/>

        <Button
            android:id="@+id/btn_linear_gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="线性渐变"/>

        <Button
            android:id="@+id/btn_reflect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="倒影效果"/>

        <Button
            android:id="@+id/btn_path_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PathEffect"/>

        <Button
            android:id="@+id/btn_sin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正弦曲线"/>

        <Button
            android:id="@+id/btn_drawing_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘图板"/>

    </LinearLayout>
</ScrollView>