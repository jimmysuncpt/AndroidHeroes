<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_chapter7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jimmysun.androidheroes.chapter7.Chapter7Activity">

    <Button
        android:id="@+id/btn_view_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="视图动画"/>

    <Button
        android:id="@+id/btn_object_animator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="属性动画"/>

    <Button
        android:id="@+id/btn_custom_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义动画"/>

    <Button
        android:id="@+id/btn_svg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SVG"/>

    <Button
        android:id="@+id/btn_anim_trick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="线图动画"/>

    <Button
        android:id="@+id/btn_sun_moon_earth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模拟三球仪"/>

    <Button
        android:id="@+id/btn_searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="轨迹动画"/>

    <Button
        android:id="@+id/btn_anim_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="灵动菜单"/>

    <Button
        android:id="@+id/btn_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="计时器动画"/>

    <Button
        android:id="@+id/btn_drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下拉展开动画"/>
</LinearLayout>
